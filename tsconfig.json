{
    "compilerOptions": {
        "outDir": "dist", // fichier de sortie de compilation
        "target":"es2021", // spécifier le langage en sortie du compilateur
        "noEmitOnError": true, // ne pas compiler en cas d'erreur
        "strict": true,
        "declaration": true,
        "moduleResolution": "node"
    },
    "files":[
        "src/app.ts", // fichiers à compiler
        "src/app2.ts",
        "src/app3.ts",
        "src/app4.ts",
        "src/app5.ts",
        "src/app6.ts",
        "src/app7.ts",
        "src/app8.ts",
    ],
    "include": [
        "src/types/**/*"
    ]
}

